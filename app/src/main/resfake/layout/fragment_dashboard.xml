<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingConstraints">


    <!-- Flow for the charts -->
    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/flow"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:constraint_referenced_ids="fragment_dashboard__chart_1,fragment_dashboard__chart_2,fragment_dashboard__chart_3,fragment_dashboard__chart_4"
        app:flow_horizontalGap="6dp"
        app:flow_maxElementsWrap="2"
        app:flow_verticalGap="6dp"
        app:flow_wrapMode="chain"
        app:layout_constraintEnd_toStartOf="@+id/buttons_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />


    <!-- Chart 1 -->
    <com.amplifilab.sensor.ui.common.component.linechart.ChartView
        android:id="@+id/fragment_dashboard__chart_1"
        android:layout_width="0dp"
        android:background="@color/colorBackgroundSecondary"
        android:layout_height="0dp"
        android:elevation="2dp"
        android:alpha="1"
        app:shape="card"
        app:type="multiSensor" />


    <!-- Chart 2 -->
    <com.amplifilab.sensor.ui.common.component.linechart.ChartView
        android:id="@+id/fragment_dashboard__chart_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:shape="card"
        app:type="multiSensor" />


    <!-- Chart 3 -->
    <com.amplifilab.sensor.ui.common.component.linechart.ChartView
        android:id="@+id/fragment_dashboard__chart_3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:shape="card"
        app:type="multiSensor" />


    <!-- Chart 4 -->
    <com.amplifilab.sensor.ui.common.component.linechart.ChartView
        android:id="@+id/fragment_dashboard__chart_4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:shape="card"
        app:type="multiSensor" />


    <!-- Vertical Layout for Buttons -->
    <LinearLayout
        android:id="@+id/buttons_layout"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/divider_group_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">


            <TextView
                android:id="@+id/divider_text_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Patch One"
                android:gravity="center"
                />




        </LinearLayout>


        <!-- Start Button for Chart 1 -->
        <Button
            android:id="@+id/start_sampling_button_chart_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Sampling"
            android:drawableLeft="@drawable/ic_sine_wave_semitransparent"
            android:textColor="@color/white"
            android:backgroundTint="@color/green"
            android:elevation="4dp" />

        <LinearLayout
            android:id="@+id/divider_group_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="6dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:alpha="0.3"
                android:background="@drawable/dotted_line"

                />


            <TextView
                android:id="@+id/divider_text_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Patch Two"
                android:gravity="center"

                />

        </LinearLayout>



        <!-- Start Button for Chart 2 -->
        <Button
            android:id="@+id/start_sampling_button_chart_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Sampling"
            android:drawableLeft="@drawable/ic_sine_wave_semitransparent"
            android:textColor="@color/white"
            android:backgroundTint="@color/green"
            android:elevation="4dp" />

        <LinearLayout
            android:id="@+id/divider_group_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="6dp">


            <View
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:alpha="0.3"
                android:background="@drawable/dotted_line"

                />

            <TextView
                android:id="@+id/divider_text_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Patch Three"
                android:gravity="center"
                />


        </LinearLayout>

        <!-- Start Button for Chart 3 -->
        <Button
            android:id="@+id/start_sampling_button_chart_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Sampling"
            android:drawableLeft="@drawable/ic_sine_wave_semitransparent"
            android:textColor="@color/white"
            android:backgroundTint="@color/green"
            android:elevation="4dp" />

        <LinearLayout
            android:id="@+id/divider_group_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="6dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:alpha="0.3"
                android:background="@drawable/dotted_line"

                />

            <TextView
                android:id="@+id/divider_text_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Patch Four"
                android:gravity="center"
                />

        </LinearLayout>

        <!-- Start Button for Chart 4 -->
        <Button
            android:id="@+id/start_sampling_button_chart_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Sampling"
            android:drawableLeft="@drawable/ic_sine_wave_semitransparent"
            android:textColor="@color/white"
            android:backgroundTint="@color/green"
            android:elevation="4dp" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>



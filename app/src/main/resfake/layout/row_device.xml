<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/row_device__container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="@color/colorBackgroundSecondary"
    android:clickable="true"
    android:elevation="5dp"
    android:focusable="true"
    android:padding="16dp">

    <TextView
        android:id="@+id/row_device__textview_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorBackgroundSecondary"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingBottom="8dp"
        android:textSize="@dimen/font_size_F"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="name" />

    <TextView
        android:id="@+id/row_device__textview_mac"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackgroundSecondary"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingBottom="8dp"
        android:textColor="@color/gray_font"
        android:textSize="@dimen/font_size_F"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/row_device__textview_name"
        tools:text="mac" />

    <TextView
        android:id="@+id/row_device__textview_rssi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackgroundSecondary"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingBottom="8dp"
        android:textColor="@color/gray_font"
        android:textSize="@dimen/font_size_F"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/row_device__textview_mac"
        tools:text="rssi" />

    <TextView
        android:id="@+id/row_device__textview_distance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackgroundSecondary"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingBottom="8dp"
        android:textColor="@color/gray_font"
        android:textSize="@dimen/font_size_F"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/row_device__textview_rssi"
        tools:text="distance" />


</androidx.constraintlayout.widget.ConstraintLayout>
